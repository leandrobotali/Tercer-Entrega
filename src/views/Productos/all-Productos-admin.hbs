<div class="row">
  {{#each Productos}}
  <div class="col-md-3 my-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ nombre }} <a href="/productos/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <img class="mx-auto d-block logo m-4" src={{foto}} alt="Imagen Producto"/>
        <p>{{ descripcion }} </p>
        <p class="lead">${{ precio }}</p>
        <form action="/productos/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p clsss="lead">No hay productos todavá.</p>
      <a href="/productos/add" class="btn btn-success btn-block">Agregá uno!</a>
    </div>
  </div>
  {{/each}}
</div>